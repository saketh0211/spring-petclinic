pipeline {
    agent {
        label 'JAVA'
    }
     
   // triggers {
     //   pollSCM('* * * * *')
    //}
    stages {
        stage ('git checkout'){
            steps {
                git url: 'https://github.com/saketh0211/spring-petclinic.git',
                branch: 'main'
            }

        }
        stage ('java build and scan') {
            steps {
                withSonarQubeEnv('Sonar') {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                 sh '''mvn clean test package sonar:sonar \
                  -Dsonar.projectKey=saketh0211_spring-petclinic \
                  -Dsonar.projectName=saketh0211 \
                  -Dsonar.organization=saketh0211 \
                  -Dsonar.host.url=https://sonarcloud.io \
                  -Dsonar.login=$SONAR_AUTH_TOKEN '''// when we are providing the token id in jenkins while creating we need to use this only. 
                
                }
             }
            }  
        }
        stage('Upload to JFrog Artifactory') {
            steps {
                script {
                    def server = Artifactory.server('jfrog')
                     def buildInfo = Artifactory.newBuildInfo()

                    server.upload(
                        spec: """{
                            "files": [
                                {
                                    "pattern": "target/*.jar",
                                    "target": "saketh-libs-release-local/"
                                }
                            ]
                        }""",
                        buildInfo: buildInfo
                    )
                    server.publishBuildInfo(buildInfo)
                }
            }
        }
        stage('install trivy and scan image') {
            steps {
             sh '''
                # Install Trivy (if not already installed)
                    echo "Installing Trivy..."
                    wget -qO trivy.tar.gz https://github.com/aquasecurity/trivy/releases/latest/download/trivy_0.54.1_Linux-64bit.tar.gz
                    tar -zxvf trivy.tar.gz trivy
                    sudo mv trivy /usr/local/bin/

                    # Verify installation
                    trivy --version

                    # (Option 1) Scan the JAR file for vulnerabilities
                    echo "Scanning JAR file..."
                    trivy fs target/

                    # (Option 2) Scan Docker image if you built one
                    # echo "Scanning Docker image..."
                    # trivy image saketh-petclinic:latest
                '''
            }
        }
            
    }

    post {
        always {
            script {
                node {
                    
                    junit testResults: '**/target/surefire-reports/*.xml', allowEmptyResults: true
                }
            }
        }
        success {
            echo "it is working"
        }
        failure {
            echo "not working"
        }
    }
}
