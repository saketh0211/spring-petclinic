pipeline {
    agent {
        label 'JAVA'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage ('git checkout'){
            steps {
                git url: 'https://github.com/saketh0211/spring-petclinic.git',
                branch: 'main'
            }

        }
        stage ('java build and scan') {
            steps {
                withSonarQubeEnv('Sonar') {
                 sh '''mvn package sonar:sonar \
                  -Dsonar.projectKey=saketh0211_spring-petclinic \
                  -Dsonar.projectName=saketh0211 \
                  -Dsonar.organization=saketh0211 \
                  -Dsonar.host.url=https://sonarcloud.io \
                  -Dsonar.login=$SONAR_AUTH_TOKEN '''// when we are providing the token id in jenkins while creating we need to use this only. 
                   
                }
            }
        }
        stage ('publish artidfacts to jfrog') {
            steps {
                script {
                    // New CLI-based syntax for JFrog Plugin 1.5.x
                    def server= rtServer(
                        id: 'JFROG_SPC_JAVA',                // must match the Server ID you configured
                        url: 'https://saketh0211.jfrog.io/artifactory',
                        credentialsId: 'jfrog-token'
                        )
                    
                  def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "target/*.jar",
                                "target": "javaspc-libs-release-local/"
                            }
                        ]
                    }"""
                // Upload artifacts
                    rtUpload(
                        serverId: 'JFROG_SPC_JAVA',
                        spec: uploadSpec
                    )

                    // Publish build info
                    rtPublishBuildInfo(
                        serverId: 'JFROG_SPC_JAVA'
                    )
                }   
            }   
        }
    }

    post {
        always {
              archiveArtifacts artifacts: '**/target/*.jar'
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo "it is working"
        }
        failure {
            echo "not working"
        }
    }

}