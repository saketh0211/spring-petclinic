pipeline {
    agent {
        label 'JAVA'
    }
     
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage ('git checkout'){
            steps {
                git url: 'https://github.com/saketh0211/spring-petclinic.git',
                branch: 'main'
            }

        }
        stage ('java build and scan') {
            steps {
                withSonarQubeEnv('Sonar') {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                 sh '''mvn clean test package sonar:sonar \
                  -Dsonar.projectKey=saketh0211_spring-petclinic \
                  -Dsonar.projectName=saketh0211 \
                  -Dsonar.organization=saketh0211 \
                  -Dsonar.host.url=https://sonarcloud.io \
                  -Dsonar.login=$SONAR_AUTH_TOKEN '''// when we are providing the token id in jenkins while creating we need to use this only. 
                
                }
             }
            }
        }
      /*  stage ('publish artidfacts to jfrog') {
            steps {
                script {
                     // ðŸ§° Use installed JFrog CLI
                    def jfrogCli = tool 'jfrog-cli'
                    
                    // âœ… Configure JFrog CLI with credentials
                    sh """
                        export PATH=$jfrogCli:\$PATH
                        jf c add JFROG_SPC_JAVA \
                        --url=https://saketh0211.jfrog.io/artifactory \
                        --access-token=$JFROG_ACCESS_TOKEN \
                        --interactive=false
                    """

                    // âœ… Upload the .jar file to your Artifactory repository
                    sh """
                         export PATH=$jfrogCli:\$PATH
                         jf rt upload "target/*.jar" "javaspc-libs-release-local/" \
                        --server-id=JFROG_SPC_JAVA \
                        --build-name=spring-petclinic \
                        --build-number=$BUILD_NUMBER
                    """

                    // âœ… Publish build info to Artifactory
                    sh """
                        export PATH=$jfrogCli:\$PATH
                        jf rt build-publish spring-petclinic $BUILD_NUMBER \
                        --server-id=JFROG_SPC_JAVA
                    """
                      
                }
            }
        }
        stage ('JFrog Xray Vulnerability Scan') {
            steps {
                script {
                    
                    
                    // âœ… Scan the uploaded JAR for security issues
                    sh """
                        jf xr scan "target/*.jar" \
                        --server-id=JFROG_SPC_JAVA \
                        --min-severity=High \
                        --fail=false
                    """
                }
            }
        }*/
        stage('Upload to JFrog Artifactory') {
            steps {
                script {
                    def server = Artifactory.server('jfrog')
                    def buildInfo = Artifactory.newBuildInfo()

                    server.upload(
                        spec: """{
                            "files": [
                                {
                                    "pattern": "target/*.jar",
                                    "target": "saketh-libs-release-local"
                                }
                            ]
                        }""",
                        buildInfo: buildInfo
                    )
                    server.publishBuildInfo(buildInfo)
                }
            }
        }
    }
  
    post {
        always {
            script {
                node {
                    archiveArtifacts artifacts: '**/target/*.jar'
                    junit testResults: '**/target/surefire-reports/*.xml', allowEmptyResults: true
                }
            }
        }
        success {
            echo "it is working"
        }
        failure {
            echo "not working"
        }
    }

}