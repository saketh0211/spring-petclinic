pipeline {
    agent {
        label 'JAVA'
    }
     environment {
        SONAR_AUTH_TOKEN   = credentials('SONAR_AUTH_TOKEN')
        JFROG_ACCESS_TOKEN = credentials('JFROG_ACCESS_TOKEN')
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage ('git checkout'){
            steps {
                git url: 'https://github.com/saketh0211/spring-petclinic.git',
                branch: 'main'
            }

        }
        stage ('java build and scan') {
            steps {
                withSonarQubeEnv('Sonar') {
                 sh '''mvn package sonar:sonar \
                  -Dsonar.projectKey=saketh0211_spring-petclinic \
                  -Dsonar.projectName=saketh0211 \
                  -Dsonar.organization=saketh0211 \
                  -Dsonar.host.url=https://sonarcloud.io \
                  -Dsonar.login=$SONAR_AUTH_TOKEN '''// when we are providing the token id in jenkins while creating we need to use this only. 
                   
                }
            }
        }
        stage ('publish artidfacts to jfrog') {
            steps {
                script {
                     // ðŸ§° Use installed JFrog CLI
                    def jfrogCli = tool 'jfrog-cli'
                    // âœ… Configure JFrog CLI with credentials
                    sh """
                        ${jfrogCli}/jf c add JFROG_SPC_JAVA \
                        --url=https://saketh0211.jfrog.io \
                        --access-token=${JFROG_ACCESS_TOKEN} \
                        --interactive=false
                    """

                    // âœ… Upload the .jar file to your Artifactory repository
                    sh """
                         ${jfrogCli}/jf rt upload "target/*.jar" "javaspc-libs-release-local/" \
                        --server-id=JFROG_SPC_JAVA \
                        --build-name=spring-petclinic \
                        --build-number=$BUILD_NUMBER
                    """

                    // âœ… Publish build info to Artifactory
                    sh """
                        ${jfrogCli}/jf rt build-publish spring-petclinic $BUILD_NUMBER \
                        --server-id=JFROG_SPC_JAVA
                    """
                      
                }
            }
        }
        stage ('JFrog Xray Vulnerability Scan') {
            steps {
                script {
                    def jfrogCli = tool 'jfrog-cli'
                    
                    // âœ… Scan the uploaded JAR for security issues
                    sh """
                        ${jfrogCli}/jf xr scan "target/*.jar" \
                        --server-id=JFROG_SPC_JAVA \
                        --min-severity=High \
                        --fail=false
                    """
                }
            }
        }
    }

    post {
        always {
            script {
                node {
              archiveArtifacts artifacts: '**/target/*.jar'
            junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        success {
            echo "it is working"
        }
        failure {
            echo "not working"
        }
    }

}