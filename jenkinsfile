pipeline {
    agent {
        label 'JAVA'
    }
      environment {
        AWS_REGION = 'ap-south-1'
        AWS_ACCOUNT_ID = '700538667767'
        IMAGE_NAME = 'saketh-petclinic'
    }
   // triggers {
     //   pollSCM('* * * * *')
    //}
    stages {
        stage ('git checkout'){
            steps {
                git url: 'https://github.com/saketh0211/spring-petclinic.git',
                branch: 'main'
            }

        }
        stage ('java build and scan') {
            steps {
                withSonarQubeEnv('Sonar') {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                 sh '''mvn clean test package sonar:sonar \
                  -Dsonar.projectKey=saketh0211_spring-petclinic \
                  -Dsonar.projectName=saketh0211 \
                  -Dsonar.organization=saketh0211 \
                  -Dsonar.host.url=https://sonarcloud.io \
                  -Dsonar.login=$SONAR_AUTH_TOKEN '''// when we are providing the token id in jenkins while creating we need to use this only. 
                
                }
             }
            }  
        }
        stage('Upload to JFrog Artifactory') {
            steps {
                script {
                    def server = Artifactory.server('jfrog')
                     def buildInfo = Artifactory.newBuildInfo()

                    server.upload(
                        spec: """{
                            "files": [
                                {
                                    "pattern": "target/*.jar",
                                    "target": "saketh-libs-release-local/"
                                }
                            ]
                        }""",
                        buildInfo: buildInfo
                    )
                    server.publishBuildInfo(buildInfo)
                }
            }
        }
        stage ('docker image build') {
            steps {
                sh 'docker image build -t saketh-petclinic:1.0 .'
                sh 'docker image ls'
            }
        }
        stage('install trivy and scan image') {
            steps {
                  sh 'trivy image saketh-petclinic:1.0'
                 
           }
       }
        stage('Login to AWS & Push to ECR') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-creds',
                                                 usernameVariable: 'AWS_ACCESS_KEY_ID',
                                                 passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        export PATH=$PATH:/usr/local/bin
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        export AWS_DEFAULT_REGION=${AWS_REGION}

                        echo "Logging into AWS ECR..."
                        aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                        
                        echo "Pushing image to ECR..."
                        docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${IMAGE_NAME}:latest
                        echo "âœ… Image successfully pushed to ECR!"
                    '''
                }
            }
        }
            
    }

    post {
        always {
            script {
                node {
                    
                    junit testResults: '**/target/surefire-reports/*.xml', allowEmptyResults: true
                }
            }
        }
        success {
            echo "it is working"
        }
        failure {
            echo "not working"
        }
    }
}
